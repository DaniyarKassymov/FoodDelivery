@model FoodDelivery.ViewModels.Manager.AddFoodVm

@{
    ViewBag.Title = "Добавление блюда";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center">
    <div class="card card_width">
        <div class="card-body d-flex justify-content-center">
            <form asp-action="AddFood" method="post" asp-antiforgery="true" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>
                <div>
                    <select class="form-control" id="restaurant" asp-for="RestaurantId">
                        @foreach (var restaurant in Model.RestaurantVms)
                        {
                            <option value="@restaurant.Id">@restaurant.Title</option>
                        }
                    </select>
                </div>
                <div>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input id="restaurantTitle" asp-for="Title" class="form-control my-2 text-muted" placeholder="Название блюда">
                </div>
                <div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                    <input type="number" id="image" asp-for="Price" class="form-control my-2 text-muted" placeholder="Цена">
                </div>
                <div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <input id="description" asp-for="Description" class="form-control my-2 text-muted" placeholder="Описание">
                </div>
                <input type="submit" class="btn btn-info w-100 mt-3 text-white" value="Добавить блюдо">
            </form>
        </div>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}