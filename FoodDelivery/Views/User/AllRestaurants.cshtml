@model List<FoodDelivery.ViewModels.Manager.RestaurantVm>

@{
    ViewBag.Title = "Все заведения";
    Layout = "_Layout";
}


<div class="container">
    @foreach (var restaurant in Model)
    {
        <div class="card mb-3 mx-auto my-0" style="width: 570px">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="~/@restaurant.Image" class="img-fluid card_image" alt="restaurant_image">
                </div>
                <div class="col-md-8 text-start">
                    <div class="card-body">
                        <h5 class="card-title">Название: @restaurant.Title</h5>
                        <p class="card-text">Описание: @restaurant.Description</p>
                        <a asp-action="RestaurantDetails" asp-route-id="@restaurant.Id"
                           class="btn btn-dark text-white">Перейти на страницу заведения</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>